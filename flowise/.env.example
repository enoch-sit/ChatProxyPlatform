# Flowise Docker Configuration
# Copy this file to .env and adjust values as needed
# IMPORTANT: After git clone, run: copy .env.example .env

# ============================================
# PORT CONFIGURATION
# ============================================
PORT=3002

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Options: sqlite (default), postgres, mysql, mariadb
DATABASE_TYPE=postgres
DATABASE_PATH=/root/.flowise

# PostgreSQL Configuration (ACTIVE)
DATABASE_HOST=flowise-postgres
DATABASE_PORT=5432
DATABASE_NAME=flowise
DATABASE_USER=flowiseuser
DATABASE_PASSWORD=flowisepass

# PostgreSQL Container Configuration
POSTGRES_DB=flowise
POSTGRES_USER=flowiseuser
POSTGRES_PASSWORD=flowisepass
POSTGRES_PORT=5433

# ============================================
# STORAGE CONFIGURATION
# ============================================
STORAGE_TYPE=local
BLOB_STORAGE_PATH=/root/.flowise/storage

# ============================================
# SECRET KEYS
# ============================================
SECRETKEY_PATH=/root/.flowise
# FLOWISE_SECRETKEY_OVERWRITE=your-encryption-key-here

# ============================================
# LOGGING
# ============================================
DEBUG=false
LOG_PATH=/root/.flowise/logs
LOG_LEVEL=info

# ============================================
# CORS AND SECURITY
# ============================================
CORS_ORIGINS=*
IFRAME_ORIGINS=*

# ============================================
# FILE UPLOAD
# ============================================
FLOWISE_FILE_SIZE_LIMIT=50mb

# ============================================
# AUTHENTICATION (Optional - for multi-user setup)
# ============================================
# FLOWISE_USERNAME=
# FLOWISE_PASSWORD=
# JWT_AUTH_TOKEN_SECRET=
# JWT_REFRESH_TOKEN_SECRET=

# ============================================
# TELEMETRY
# ============================================
DISABLE_FLOWISE_TELEMETRY=true

# ============================================
# COMMUNITY NODES
# ============================================
SHOW_COMMUNITY_NODES=true

# ============================================
# API CONFIGURATION
# ============================================
# APIKEY_PATH=/root/.flowise
# RATE_LIMIT_MAX=100
# RATE_LIMIT_DURATION=60

# ============================================
# EXECUTION ENVIRONMENT
# ============================================
# EXECUTION_MODE=main
# TOOL_TIMEOUT=30000
